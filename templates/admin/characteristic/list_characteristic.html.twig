<h3>Les espèces</h3>
<a href="{{ path('admin_add_species') }}" class="button-add"><button type="button" class="btn btn-outline-primary ">Ajouter une espèce</button></a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Identifiant </th>
          <th scope="col">Nom</th>
          <th scope="col">Etat</th>
           <th scope="col">Changer l'état</th>
          <th scope="col">Editer</th>
         {# <th scope="col">Supprimer</th> #}
  
        </tr>
      </thead>
      <tbody>
        {% for specie in listSpecies %}

          {% if specie.status == 0 %}
          <tr class="table-warning">
          {% else %}
          <tr class="table-success">
          {% endif %}   
                 
          <th >{{specie.id}}</th>
          <td>{{specie.name}}</td>                
          <td>
            {% if specie.status == 0 %}
              Hors ligne
          </td>
          <td><a href="{{ path('admin_edit_species_status',{id : specie.id})}}">Mettre en ligne</a> </td>
            {% else %}
            En ligne
          </td>
          <td><a href="{{ path('admin_edit_species_status',{id : specie.id})}}">Mettre hors ligne</a> </td>
            {% endif %}  
               
          <td><a href="{{ path('admin_edit_species',{id : specie.id})}}"><i class="far fa-edit edit"></i> Editer</a> </td>
        {#  <td>
             <i class="fas fa-times cross"></i>
             
            <form method="post" action="{{ path('admin_delete_shelter', {'id': specie.id}) }}"
            onsubmit="return confirm('Are you sure you want to delete this item?');"
            style="display: inline-block;">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn">Supprimer</button>
            </form>
          </td>
        </tr> #}
       {% endfor %}
       
      <tbody>
      </table>


